<%- include('header-one1'); -%>
<style>
  /* Your existing styles */

  .table-responsive {
    display: none;
  }


  @media print {
    .body {
      font-size: 10px !important;
    }


    /* Hide non-essential elements */
    #buttons_remove,
    #control_remove,
    .modal,
    .d-flex.justify-content-between,
    h5.fs-4 {
      display: none !important;
    }

    /* Adjust the table for printing */
    .table-responsive {
      display: block !important;
    }

    .table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1em;
      font-size: 10px;
      line-height: 1;
    }

    .table th,
    .table td {
      border: 1px solid #ddd;
      padding: 5px;
      text-align: left;
      font-size: 10px;
    }

    .table th {
      background-color: #f2f2f2;
    }
  }

  .notes-container {
    border: 1px solid #ccc;
    /* Grey border */
    border-radius: 5px;
    max-height: 200px;
    /* Fixed height */
    overflow-y: scroll;
    /* Scrollable content */
    padding: 10px;
  }

  .note-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    padding: 5px;
  }

  .note-date {
    flex: 1;
    font-size: 0.9em;
    color: #555;
    /* Light grey color */
  }

  .note-text {
    flex: 2;
    font-size: 0.85em;
    /* Smaller font for note */
    color: #777;
    text-align: right;
  }
</style>

