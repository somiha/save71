<%- include('header', {subCat: subCat, mainCat: mainCat, extraCat: extraCat, userImage: userImage});-%>

<div class="container d-md-block justify-content-center d-none my-5">

  <nav class="mb-2 d-flex flex-column flex-md-row justify-content-between gap-4 row-gap-2">
    <div>
      <p class="m-0 fs-4" style="color: #1a63a6; font-weight: 600;">Nearest Products</p>
    </div>
    <div class="d-flex justify-content-start gap-2 mb-3 pb-3" id="nav-tab" role="tablist" style="overflow: auto;">
      <a href="/nearest-products" style="color: #1a63a6; font-weight: bold;">See All
        <!-- <i class="bi bi-arrow-right "></i> -->
      </a>
    </div>
  </nav>

  <div class="row row-cols-lg-5 g-4 row-cols-2 row-cols-md-3">
    <!-- per product -->
    <% sortedShops.forEach(sortedShop => { %>
    <div class="col">
      <%- include('./components/product_card.ejs', {
        product_details: sortedShop,
      }) -%>
    </div>
    <% }) %>
    <!-- per product End -->
  </div>
</div>

