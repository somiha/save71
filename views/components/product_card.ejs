<div class="card card-product d-flex flex-column justify-content-between p-2 p-lg-3 product-hover "
  style="height: 21rem ;">



  <div class="">
    <div class="text-center position-relative">
      <a
        href="/product-details/<%= encodeURIComponent(product_details.product_name) %>/<%= encodeURIComponent(product_details.product_id) %>">
        <img src="<%= product_details.product_image_url  %>" alt="<%= product_details.product_name %>"
          class="mb-3 img-fluid" style="height: 10rem" loading="lazy">
      </a>
    </div>
    <h2 class="fs-6">
      <a href="/product-details/<%= encodeURIComponent(product_details.product_name) %>/<%= encodeURIComponent(product_details.product_id) %>"
        class="text-inherit text-wrap text-decoration-none" style="color: #1a63a6;">
        <%= product_details.product_name %>
      </a>
    </h2>
    <div style="display: flex; align-items: center; ">
      <small class="text-muted" style="margin-right: 2px;">
        <%= currencyCode %>
      </small>
      <span class="text-dark fs-5 text-wrap" style="
      -webkit-line-clamp: 1;
">
        <%= (product_details.product_price * currRate).toFixed(2) %>
      </span>
    </div>
  </div>


  <div class="d-flex flex-column row-gap-2 flex-lg-row justify-content-between align-items-lg-center ">
    <div class="d-flex align-items-center w-full w-lg-70">
      <i class="bi bi-geo-alt-fill color-main me-1"></i>
      <p class="m-0" style="

	            overflow: hidden;
	            text-overflow: ellipsis;
	            white-space: initial;
	            display: -webkit-box;
	            -webkit-line-clamp: 1;
	            -webkit-box-orient: vertical;">
        <% if (product_details.distanceKm>= 1) { %>
        <%= product_details.distanceKm %> KM
        <% } else { %>
        <%= (product_details.distanceMeters) %> M
        <% } %>
      </p>
    </div>
    <div class="add-to-cart-btn">
      <a href="/cart/<%= encodeURIComponent(product_details.seller_id) %>/<%= encodeURIComponent(product_details.product_id)  %>"
        class="btn btn-sm primary-btn w-100 text-center justify-content-center d-flex align-items-center">
        <i class="bi bi-plus d-none d-lg-block"></i>
        Add
      </a>
    </div>

  </div>

</div>